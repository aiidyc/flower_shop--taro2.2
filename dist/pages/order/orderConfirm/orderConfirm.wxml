        <view class="OrderConfirm--top">
            <view class="OrderConfirm--top__address">
                <view class="OrderConfirm--top__address--top">
                    <view class="OrderConfirm--top__address--top__info">
                        <image style="{{anonymousState__temp}}" src="{{coordinate}}"></image><text class="OrderConfirm--top__address--top__info__text">点击选择收货地址</text>
                    </view>
                    <image style="{{anonymousState__temp2}}" src="{{rightArrow}}"></image>
